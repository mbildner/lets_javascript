{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "rules": {
    "indent": [ 2, 2 ],
    "quotes": [ 2, "single" ],
    "jsx-quotes": [ 2, "prefer-single" ],
    "linebreak-style": [ 2, "unix" ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "experimentalObjectRestSpread": true,
    "jsx": true
  }
}
